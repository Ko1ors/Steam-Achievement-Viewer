<Window x:Class="AchievementTest.MainWindow" Background="Black"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AchievementTest"
        mc:Ignorable="d"
        Title="Achievements" Height="450" Width="800" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#14141f"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Border x:Name="NavButton" CornerRadius="10" BorderBrush="White" BorderThickness="3" Height="auto" Width="100"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="NavButton" Property="BorderBrush" Value="#FFE6DDDD"/>
                                <Setter TargetName="NavButton" Property="Background" Value="Gray"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="NavButton" Property="Background" Value="#232423"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <DockPanel LastChildFill="True">
            <Grid Margin="0,5,0,0" x:Name="NavBar" Height="60" DockPanel.Dock="Top" Background="#14141f">
                <StackPanel Orientation="Horizontal">
                <Button  Content="Главная"/>
                    <Button>
                        <TextBlock HorizontalAlignment="Center">
                            Последние
                            <LineBreak/>
                            Полученные
                        </TextBlock>
                    </Button>
                <Button  Content="3"/>
                <Button  Content="3"/>
                </StackPanel>
                <Border BorderBrush="White" BorderThickness="3"/>
                <Image  Stretch="Fill"  Width="50" Height="50" HorizontalAlignment="Right" Margin="0,5,10,5"/>
            </Grid>
            <Grid x:Name="Information" Height="auto" Background="#FF030B23" >
                <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" BorderBrush="White" BorderThickness="3">
                    <StackPanel >
                        <TextBlock TextAlignment="Center" Foreground="White">Информация</TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
